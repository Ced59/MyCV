}


<div class="page-content p-5" id="content">

    <!-- Bouton pour cacher le menu -->
    <button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"><small class="text-uppercase font-weight-bold">Menu</small></button>

 
    <div class="row">
        <div class="col-md-4 col-sm-12">
            <img src="~/images/ProfilModifCV.jpg" alt="Ma photo de profil" width="150" class="mr-3 rounded-circle img-thumbnail shadow-sm">
        </div>

        <div class="col-md-8 col-sm-12">
            <h2 class="text-white">Cédric Caudron</h2>
            <div id="age"></div>
